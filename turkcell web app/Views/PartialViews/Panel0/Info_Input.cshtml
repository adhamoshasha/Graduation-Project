@model turkcell_web_app.ViewModels.Frd
<div class="row no-gutters" style="background-color:#f9f9f9;">
    <div class="col">
        <div style="overflow-x:hidden;" class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <tbody>
                    <tr>
                        <td>
                            <p class="text-left" style="width:100%;">Request Number</p>
                        </td>
                        <td>
                            <div class="row align-items-center">
                                <div class="col-lg-10 col-xl-10">
                                    <input id="id-input" type="text" value="@Model.Panel0.Id" name="Panel0.Id" required style="width:100%;" maxlength="32">
                                </div>
                                <div class="col-lg-1 col-xl-2">
                                    <div class="checkmark" style="visibility:hidden; data-toggle=" tooltip"; title="FRD number is unique." display: inline-block;">
                                        <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" xml:space="preserve" x="0px" y="0px"
                                             viewBox="0, 0, 100, 100" id="checkmark">
                                        <g transform="">
                                        <circle class="path" fill="none" stroke="#7DB0D5" stroke-width="4" stroke-miterlimit="10" cx="50" cy="50" r="44" />



                                        <circle class="fill" fill="none" stroke="#7DB0D5" stroke-width="4" stroke-miterlimit="10" cx="50" cy="50" r="44" />



                                        <polyline class="check" fill="none" stroke="#7DB0D5" stroke-width="8" stroke-linecap="round" stroke-miterlimit="10" points="70,35 45,65 30,52  " />

                                        </g>
                                        </svg>

                                    </div>
                                </div>

                            </div>

                            <div>


                                <p class="checkmark-text" style="color:green;display:none;visibility:hidden;">No similar Number exists in database</p>
                            </div>

                        </td>
                    </tr>
                    <tr>
                        <td>
                            <p class="text-left" style="width:100%;">Request Name</p>
                        </td>

                        <td>
                            <input id="name-input" type="text" value="@Model.Panel0.Title" required name="Panel0.Title" style="width:100%;" maxlength="256">
                            @Html.ValidationMessageFor(m => m.Panel0.Title, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <p class="text-left" style="width:100%;">Request Owner</p>
                        </td>
                        <td><input class="form-control-plaintext" type="text" name="Panel0.Owner" value="@Model.Panel0.Owner" readonly=""></td>
                    </tr>
                    <tr>
                        <td>
                            <p class="text-left" style="width:100%;">Version Number</p>
                        </td>

                        <td>
                            @{
                                // Model.Panel0.Versions.Add(new turkcell_web_app.Models.Panels.Classes.FrdVersion() { Date = new DateTime(DateTime.Today.Year, DateTime.Today.Month, DateTime.Today.Day, DateTime.Today.Hour,DateTime.Today.Minute,DateTime.Today.Second) });
                                var a = new turkcell_web_app.Models.Panels.Classes.FrdVersion() { Date = DateTime.Now };
                            }
                            <input class="form-control-plaintext" type="text" name="LatestVersion" value="1" readonly="" style="width:100%;">
                            <input type="hidden" name="Panel0.Versions[0].Date" value="@a.Date" />
                            <input type="hidden" name="Panel0.Versions[0].ReviserInfo.Name" value="@Model.Panel0.Owner" />

                        </td>

                    </tr>

                </tbody>

            </table>

        </div>

    </div>

</div>
