                </div>
            </div>
            <div>
                <a class="btn btn-primary btn-lg text-left" data-toggle="collapse" aria-expanded="false" aria-controls="collapse-7" role="button" href="#collapse-7" style="width:100%;background-color:#175777;">Panel 6:&nbsp;Prioritization</a>
                <div class="colpse collapse" id="collapse-7" style="margin-bottom:10px;">
                    @Html.Partial("~/Views/PartialViews/Panel6/Discounts_Table.cshtml")
                    @Html.Partial("~/Views/PartialViews/Panel6/Add_Discounts.cshtml")
                </div>
            </div>
        </div>
        <div>
            <a class="btn btn-primary btn-lg text-left" data-toggle="collapse" aria-expanded="false" aria-controls="collapse-8" role="button" href="#collapse-8" style="width:100%;background-color:#175777;">Panel 7: Confirmations</a>
            <div class="colpse collapse" id="collapse-8">
                @Html.Partial("~/Views/PartialViews/Panel7/Approvals_List.cshtml")
            </div>
        </div>

        @Html.Partial("~/Views/PartialViews/Extra/Update_Note.cshtml")

        <input id="FrdId" type="hidden" value="@Model.Panel0.Id">
        <input id="FrdType" type="hidden" name="SubmitType" value="@Model.SubmitType">

        <input type="hidden" value="@Model.Upload_Token" name="Upload_Token" />
        <div class="container">
            <div class="row justify-content-center" style="margin-top:20px;">
                @Html.AntiForgeryToken()
                @Html.Partial("~/Views/PartialViews/Buttons/Submit_Updates.cshtml")
                @Html.Partial("~/Views/PartialViews/Buttons/Close.cshtml")
            </div>
        </div>
