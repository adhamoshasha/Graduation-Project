@model turkcell_web_app.ViewModels.NotificationPage

@{
    ViewBag.Title = "List of Notifications";
    Layout = "~/Views/Shared/Layout.cshtml";
}




<div class="row">
    <div class="col">
        <h4 class="text-center" id="frd-lists-heading">Notifications</h4>
    </div>
</div>
<div class="list-group">
    @foreach (var Noti in Model.Notifications)
    {
        if (Noti.Seen)
        {
            <a class="list-group-item list-group-item-action frd-noti-list-item" href="@Url.Action("Check","Notifications",new {noti_id=Noti.ID })" >
                <h5 class="frd_list_title">@Noti.FrdTitle</h5>
                <div class="row justify-content-start">
                    <div class="col-3 col-sm-3 col-md-3 col-lg-3 col-xl-2 offset-xl-0 align-self-center" style="width:25%;"><span class="frd_label">ID:&nbsp;</span><span id="id">@Noti.FrdId</span></div>
                    <div class="col-3 col-sm-5 col-md-3 col-xl-3 offset-sm-0 offset-md-0 offset-lg-0 offset-xl-0" style="width:25%;"><span class="frd_label">Date:</span><span id="date">@Noti.NotiTime</span></div>
                </div>
                <div class="row">
                    <div class="col">
                        <p class="noti-list-dec">@Noti.Content</p>
                    </div>
                </div>
            </a>
        }
        else
        {
            <a class="list-group-item list-group-item-action frd-noti-list-item" href="@Url.Action("Check","Notifications",new {noti_id=Noti.ID })" style="background:#95c3f066;">
                <h5 class="frd_list_title">@Noti.FrdTitle</h5>
                <div class="row justify-content-start">
                    <div class="col-3 col-sm-3 col-md-3 col-lg-3 col-xl-2 offset-xl-0 align-self-center" style="width:25%;"><span class="frd_label">ID:&nbsp;</span><span id="id">@Noti.FrdId</span></div>
                    <div class="col-3 col-sm-5 col-md-3 col-xl-3 offset-sm-0 offset-md-0 offset-lg-0 offset-xl-0" style="width:25%;"><span class="frd_label">Date:</span><span id="date">@Noti.NotiTime</span></div>
                </div>
                <div class="row">
                    <div class="col">
                        <p class="noti-list-dec">@Noti.Content</p>
                    </div>
                </div>
            </a>
        }

    }
</div>



